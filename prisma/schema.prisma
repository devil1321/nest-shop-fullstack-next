// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserShop {
  id           Int       @id @default(autoincrement())
  nickname     String
  email        String    @unique
  password     String
  first_name   String
  last_name    String
  city         String
  zip          String
  phone        String    @unique
  createdAt    DateTime  @default(now())
  lastModified DateTime  @default(now()) @updatedAt
  Cart         Cart[]    // One-to-many relationship to Cart
  Payments     Payments[] // One-to-many relationship to Payments

  // Unique constraints
  @@unique([nickname, email, phone])
}

model Cart {
  id         Int       @id @default(autoincrement())
  cart_id    String
  user_id    Int       @unique
  quantity   Int
  price      Int
  product_id Int
  UserShop   UserShop  @relation(fields: [user_id], references: [id])
}

model Payments {
  id             Int       @id @default(autoincrement())
  user_id        Int       @unique
  total          Int
  cart_items_id  String
  is_payed       Boolean
  timestamp      DateTime  @default(now())
  UserShop       UserShop? @relation(fields: [user_id], references: [id])
}
